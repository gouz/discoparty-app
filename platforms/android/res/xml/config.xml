<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.gougouzian.discoparty" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <allow-intent href="market:*" />
    <name>DiscoParty</name>
    <description>
        An app for DiscoParty !!
    </description>
    <author email="sylvain@gougouzian.fr" href="http://sylvain.gougouzian.fr">
        Sylvain Gougouzian
    </author>
    <content src="index.html" />
    <icon src="app-icon-green-2x.png" />
    <access origin="*" />
    <allow-navigation href="http://discoparty.herokuapp.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
</widget>
